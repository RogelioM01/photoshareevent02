# Database Configuration
# Primary database (Coolify PostgreSQL)
COOLIFY_DATABASE_URL=postgresql://user:password@hostname:port/database_name
# Local fallback database
DATABASE_URL=postgresql://user:password@localhost:5432/database_name

# Cloudinary Configuration (Required for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Frontend Cloudinary
VITE_CLOUDINARY_CLOUD_NAME=your-cloud-name

# Environment
NODE_ENV=production

# Optional: Session Secret (auto-generated if not provided)
SESSION_SECRET=your-session-secret-here

# ReImage API (if needed)
REIMAGE_API_KEY=your-reimage-key-here

# Resend email API key for sending notifications
# RESEND_API_KEY removed - using Emailit only

# Emailit.com configuration for rocky.mx domain
EMAILIT_API_KEY=emapiXpDYYFeeuVAJGWByObqO04IKjr9AUhYQ
EMAILIT_API_URL=https://api.emailit.com/v1
EMAILIT_FROM_EMAIL=noreply@rocky.mx
EMAILIT_FROM_NAME=Rocky Events
USE_EMAILIT=true

# Email delivery configuration
# Set to 'true' to send all emails to admin (for development/testing)
# Set to 'false' to attempt direct delivery to users (requires verified domain)
EMAIL_FORCE_ADMIN=true